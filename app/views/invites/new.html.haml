%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      =bootstrap_form_tag url: invites_path do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            .row
              .col-sm-4
                =f.text_field :name, label: "Friend's Name"
          .form-group
            .row
              .col-sm-4
                =f.email_field :email, label: "Friend's Email"
          .form-group
            .row
              .col-sm-6
                =f.text_area :message, rows: 6, label: "Invitation Message"
        %fieldset.form-group.action
          =f.submit "Send Invitation", class: 'btn btn-default'
