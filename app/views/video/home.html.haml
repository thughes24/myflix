%article.video_category
  -@categories.each do |category|
    %header
      %h3= link_to "#{category.name}", show_category_path(category)
    .videos.row
      - category.videos.each do |video|
        .video.col-sm-2
          = link_to show_video_path(video.id.to_s) do
            %img(src="#{video.small_cover_url}")