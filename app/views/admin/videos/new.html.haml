%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        =bootstrap_form_for [:admin,@video], html: {class: "form form-horizontal"} do |f|
          %form.form-horizontal
            %ul.nav.nav-tabs
              %li
                %a(href="/ui/admin_views_payments") Recent Payments
              %li.active
                %a(href="") Add a New Video
            %br
            %fieldset
              .form-group
                .col-sm-3
                  =f.text_field :title
              .form-group
                .col-sm-6
                  =f.select :category_id, options_for_select(Category.all.map {|x| [x.name,x.id]})
              .form-group
                .col-sm-6
                  =f.text_area :description, html: {rows: 8}
              .form-group
                .col-sm-6
                  %col.btn.btn-file
                    =f.file_field :large_cover, label: "Large Cover"
              .form-group
                .col-sm-6
                  %col.btn.btn-file
                    =f.file_field :small_cover, label: "Small Cover"
              .form-group
                .col-sm-6
                  =f.text_field :video_url, label: "Video Url"

            %fieldset.actions.form-group
              .col-sm-6.col-md-offset-3
                =f.submit "Add Video Now", class: "btn btn-default"