%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  %ul.col-md-4.clearfix
    %li= link_to "Videos", home_path
    %li= link_to "My Queue"
    %li= link_to "People"
  =form_tag(search_video_index_path, method: "get", class: "col-md-5 navbar-form") do
    .form-group
      =text_field_tag(:search, "Search for Vidoes Here", class: "form-control")
      =submit_tag("Search", class: "btn btn-default")
  #user_links.pull-right
    %ul
      %li.dropdown
        -if current_user
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.username}
            %b.caret
        %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
          %li
            %a(href="#") Account
            %a(href="#") Plan and Billing
            =link_to "Logout", logout_path

